<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/netherite"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/ground"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="50sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/netherite_ingot" />

    <TextView
        android:id="@+id/diamond"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/ground"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="50sp" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/diamond" />

    <TextView
        android:id="@+id/gold"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/ground"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="50sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/gold_ingot" />

    <ImageView
        android:id="@+id/win"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:src="@drawable/win" />

    <TextView
        android:id="@+id/iron"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/ground"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="50sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/iron_ingot" />

    <TextView
        android:id="@+id/coal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/ground"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="50sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/coal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button"
        android:textColor="@color/text"
        android:onClick="onClickBtnAddCoal"
        android:textSize="50dp"
        android:text="@string/btn_dig" />
</LinearLayout>
